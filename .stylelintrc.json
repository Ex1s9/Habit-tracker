{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-prettier"
    ],
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "max-nesting-depth": 3,
        "scss/dollar-variable-pattern": "^([a-z0-9]*)(-[a-z0-9]*)*$",
        "scss/at-mixin-pattern": "^([a-z0-9]*)(-[a-z0-9]*)*$",
        "selector-class-pattern": "^[a-z0-9]+([A-Z][a-z0-9]*)*$"
    }
}